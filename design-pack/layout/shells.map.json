{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EyeHear Layout Shells & Containers",
  "description": "Application layout patterns, containers, and structural components",
  "version": "1.0.0",

  "appLayout": {
    "App": {
      "file": "src/App.tsx",
      "structure": "ErrorBoundary > ColdStartLoader > QueryClient > TooltipProvider > Suspense > AuthProvider > Routes",
      "classes": "No specific layout classes - uses router structure",
      "description": "Root application wrapper with providers and error boundaries"
    }
  },

  "pageShells": {
    "Index": {
      "file": "src/pages/Index.tsx",
      "structure": "ProtectedRoute > SpeechTranscriber",
      "classes": "No specific layout classes - delegates to components",
      "description": "Main application page - simple wrapper around speech transcription"
    },

    "Auth": {
      "file": "src/pages/Auth.tsx", 
      "structure": "Authentication page layout",
      "classes": "Expected: min-h-screen flex items-center justify-center",
      "description": "Authentication page shell"
    },

    "Privacy": {
      "file": "src/pages/Privacy.tsx",
      "structure": "Privacy policy page layout", 
      "classes": "Expected: container max-w-4xl mx-auto py-8",
      "description": "Static content page shell"
    },

    "NotFound": {
      "file": "src/pages/NotFound.tsx",
      "structure": "404 error page layout",
      "classes": "Expected: min-h-screen flex items-center justify-center",
      "description": "Error page shell"
    }
  },

  "componentShells": {
    "SpeechTranscriber": {
      "file": "src/components/SpeechTranscriber.tsx",
      "structure": "relative > absolute overlay + flex flex-col min-h-[100dvh]",
      "containerClasses": "relative flex flex-col min-h-[100dvh]",
      "backgroundOverlay": "pointer-events-none absolute inset-0 bg-animated-purple opacity-75",
      "particleOverlay": "pointer-events-none absolute inset-0 overflow-hidden",
      "headerShell": "header-gradient backdrop-blur-glass border-b border-border/20 p-4",
      "mainShell": "flex-1 p-4 overflow-y-auto",
      "mainContainer": "max-w-6xl mx-auto",
      "description": "Main application interface with futuristic background effects"
    },

    "SavedTranscripts": {
      "file": "src/components/SavedTranscripts.tsx",
      "structure": "relative > background overlays + content areas",
      "containerClasses": "relative mx-auto max-w-5xl px-4 py-8",
      "headerShell": "max-w-4xl mx-auto flex items-center justify-between",
      "mainShell": "flex-1 p-4 overflow-y-auto",
      "mainContainer": "max-w-4xl mx-auto",
      "gridLayout": "grid grid-cols-1 md:grid-cols-3 gap-4 mb-6",
      "transcriptGrid": "grid-template-columns: repeat(auto-fit, minmax(280px, 1fr))",
      "description": "Saved transcripts listing with responsive grid layout"
    },

    "PermissionGuard": {
      "file": "src/components/PermissionGuard.tsx",
      "structure": "Full-screen overlays with centered content",
      "shellClasses": "relative min-h-[100dvh] flex items-center justify-center",
      "containerClasses": "relative mx-auto max-w-2xl px-4 py-8 flex flex-col items-center justify-center min-h-[100dvh]",
      "backgroundOverlay": "pointer-events-none absolute inset-0 bg-animated-purple opacity-75",
      "description": "Permission request screens with fullscreen overlays"
    },

    "LoadingSkeleton": {
      "file": "src/components/LoadingSkeleton.tsx", 
      "structure": "Mimics main app layout structure",
      "containerClasses": "relative flex flex-col min-h-[100dvh]",
      "headerShell": "bg-purple-900/30 backdrop-blur-md border-b border-purple-500/20 p-4",
      "mainShell": "flex-1 p-4 overflow-y-auto", 
      "mainContainer": "max-w-6xl mx-auto",
      "description": "Loading state that matches main app structure"
    },

    "ErrorBoundary": {
      "file": "src/components/ErrorBoundary.tsx",
      "structure": "Fullscreen error display",
      "shellClasses": "relative min-h-[100dvh] flex items-center justify-center",
      "containerClasses": "relative mx-auto max-w-2xl px-4 py-8",
      "description": "Error state with centered content and debug information"
    }
  },

  "containerPatterns": {
    "pageContainer": {
      "classes": "max-w-6xl mx-auto px-4 py-8",
      "usage": "Main page content wrapper",
      "breakpoints": {
        "default": "px-4",
        "sm": "px-6",
        "lg": "px-8"
      }
    },

    "contentContainer": {
      "classes": "max-w-4xl mx-auto",
      "usage": "Standard content width with margins",
      "contexts": ["Article content", "Form layouts", "Text-heavy pages"]
    },

    "wideContainer": {
      "classes": "max-w-5xl mx-auto px-4 py-8", 
      "usage": "Wider content for data display",
      "contexts": ["Data tables", "Dashboard layouts", "Grid content"]
    },

    "fullWidthContainer": {
      "classes": "w-full",
      "usage": "Full viewport width",
      "contexts": ["Hero sections", "Background overlays", "Edge-to-edge content"]
    },

    "centeredContainer": {
      "classes": "min-h-[100dvh] flex items-center justify-center",
      "usage": "Vertically and horizontally centered content", 
      "contexts": ["Loading screens", "Error pages", "Modal content", "Auth pages"]
    }
  },

  "headerPatterns": {
    "mainHeader": {
      "classes": "header-gradient backdrop-blur-glass border-b border-border/20 p-4",
      "structure": "Container > Flex layout with brand and navigation",
      "usage": "Primary application header"
    },

    "pageHeader": {
      "classes": "flex items-center justify-between mb-6",
      "structure": "Title/nav on left, actions on right",
      "usage": "Page-level headers within content areas"
    },

    "sectionHeader": {
      "classes": "flex items-center gap-4 mb-4",
      "structure": "Icon + title + optional actions",
      "usage": "Section dividers within pages"
    }
  },

  "navigationPatterns": {
    "backNavigation": {
      "classes": "flex items-center gap-2",
      "structure": "Icon + label, typically left-aligned",
      "usage": "Return to previous page/state"
    },

    "tabNavigation": {
      "classes": "inline-flex h-10 items-center justify-center rounded-md bg-muted p-1 text-muted-foreground",
      "structure": "Horizontal tab list with active states",
      "usage": "Content switching within pages"
    }
  },

  "overlayPatterns": {
    "backgroundOverlay": {
      "classes": "pointer-events-none absolute inset-0 bg-animated-purple opacity-75",
      "usage": "Animated background for loading/permission states",
      "zIndex": "-1 or background layer"
    },

    "particleOverlay": {
      "classes": "pointer-events-none absolute inset-0 overflow-hidden",
      "usage": "Decorative particle effects",
      "zIndex": "Background layer"
    },

    "modalOverlay": {
      "classes": "fixed inset-0 z-50 bg-black/80",
      "usage": "Modal and dialog backgrounds",
      "zIndex": "50"
    }
  },

  "gridSystems": {
    "statsGrid": {
      "classes": "grid grid-cols-1 md:grid-cols-3 gap-4",
      "usage": "Statistics cards layout",
      "breakpoints": {
        "mobile": "1 column",
        "tablet": "2 columns", 
        "desktop": "3 columns"
      }
    },

    "transcriptGrid": {
      "classes": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4",
      "usage": "Transcript cards responsive grid",
      "breakpoints": {
        "mobile": "1 column",
        "tablet": "2 columns",
        "desktop": "3 columns"
      }
    },

    "bentoGrid": {
      "classes": "bento-grid",
      "cssDefinition": "display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; padding: 1.5rem;",
      "usage": "Flexible card layout system",
      "minItemWidth": "280px"
    }
  },

  "spacingSystem": {
    "pagePadding": "p-4 md:p-6 lg:p-8",
    "sectionSpacing": "space-y-6 md:space-y-8",
    "componentSpacing": "gap-4 md:gap-6",
    "contentSpacing": "space-y-4",
    "inlineSpacing": "gap-2 md:gap-3"
  }
}