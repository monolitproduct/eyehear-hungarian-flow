{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EyeHear Theme Configurations", 
  "description": "Theme mappings for light and dark modes with CSS variable assignments",
  "version": "1.0.0",

  "themes": {
    "dark": {
      "name": "Dark (Default)",
      "description": "Futuristic Sci-Fi Dark Theme with neon accents",
      "selector": ":root",
      "variables": {
        "background": "240 10% 5%",
        "background-secondary": "240 10% 8%",
        "background-tertiary": "240 10% 10%", 
        "foreground": "0 0% 98%",
        "card": "240 10% 8%",
        "card-foreground": "0 0% 98%",
        "card-glass": "240 10% 8% / 0.7",
        "popover": "240 10% 8%",
        "popover-foreground": "0 0% 98%",
        "primary": "270 100% 70%",
        "primary-bright": "270 100% 80%",
        "primary-dark": "270 100% 60%", 
        "primary-foreground": "0 0% 98%",
        "secondary": "240 10% 15%",
        "secondary-foreground": "0 0% 98%",
        "muted": "240 10% 12%",
        "muted-foreground": "240 5% 65%",
        "accent": "240 10% 15%",
        "accent-foreground": "0 0% 98%",
        "destructive": "0 100% 50%",
        "destructive-foreground": "0 0% 98%",
        "border": "240 10% 18%",
        "input": "240 10% 12%", 
        "ring": "270 100% 70%",
        "transcript-cyan": "180 100% 50%",
        "neon-gold": "45 100% 50%",
        "success": "120 100% 50%",
        "warning": "45 100% 50%",
        "info": "200 100% 50%",
        "radius": "1rem",
        "sidebar-background": "240 10% 6%",
        "sidebar-foreground": "0 0% 98%",
        "sidebar-primary": "270 100% 70%",
        "sidebar-primary-foreground": "0 0% 98%",
        "sidebar-accent": "240 10% 12%",
        "sidebar-accent-foreground": "0 0% 98%",
        "sidebar-border": "240 10% 15%",
        "sidebar-ring": "270 100% 70%"
      },
      "gradients": {
        "gradient-primary": "linear-gradient(135deg, hsl(270 100% 70%), hsl(270 100% 80%))",
        "gradient-pink-purple": "linear-gradient(90deg, #FF0080, #7928CA)",
        "gradient-background": "linear-gradient(135deg, hsl(240 10% 5%), hsl(240 10% 8%))",
        "gradient-card": "linear-gradient(135deg, hsl(240 10% 8% / 0.8), hsl(240 10% 12% / 0.6))",
        "gradient-header": "linear-gradient(135deg, hsl(240 10% 8% / 0.9), hsl(240 10% 5% / 0.95))",
        "gradient-transcript": "linear-gradient(45deg, hsl(180 100% 50%), hsl(180 100% 60%))"
      },
      "effects": {
        "mic-glow": "0 0 40px hsl(270 100% 70% / 0.8)",
        "neon-glow": "0 0 20px hsl(270 100% 70% / 0.6)",
        "card-shadow": "0 8px 32px hsl(240 10% 3% / 0.5)",
        "glass-backdrop": "blur(16px)",
        "transition-smooth": "all 0.4s cubic-bezier(0.23, 1, 0.32, 1)",
        "transition-spring": "all 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55)"
      }
    },

    "light": {
      "name": "Light",
      "description": "Light theme with adapted sci-fi elements",
      "selector": ".light",
      "variables": {
        "background": "0 0% 98%",
        "background-secondary": "0 0% 95%",
        "background-tertiary": "0 0% 92%",
        "foreground": "240 10% 5%",
        "card": "0 0% 100%",
        "card-foreground": "240 10% 5%",
        "card-glass": "0 0% 100% / 0.8",
        "popover": "0 0% 100%",
        "popover-foreground": "240 10% 5%",
        "primary": "270 100% 60%",
        "primary-bright": "270 100% 70%",
        "primary-dark": "270 100% 50%",
        "primary-foreground": "0 0% 98%",
        "secondary": "240 5% 90%",
        "secondary-foreground": "240 10% 5%",
        "muted": "240 5% 92%", 
        "muted-foreground": "240 5% 40%",
        "accent": "240 5% 88%",
        "accent-foreground": "240 10% 5%",
        "destructive": "0 84% 60%",
        "destructive-foreground": "0 0% 98%",
        "border": "240 5% 85%",
        "input": "240 5% 90%",
        "ring": "270 100% 60%",
        "transcript-cyan": "180 100% 40%",
        "neon-gold": "45 100% 45%",
        "success": "120 100% 40%",
        "warning": "45 100% 45%",
        "info": "200 100% 45%",
        "radius": "1rem"
      }
    }
  },

  "themeStrategy": {
    "type": "class-based",
    "default": "dark",
    "selector": {
      "dark": ":root",
      "light": ".light"
    },
    "mediaQuery": {
      "prefersDark": "@media (prefers-color-scheme: dark)",
      "prefersLight": "@media (prefers-color-scheme: light)"
    }
  },

  "cssVariableMapping": {
    "prefix": "--",
    "format": "hsl({value})",
    "alphaFormat": "hsl({value} / {alpha})"
  }
}